              source(media="(min-width: 600px) and (max-width: 1023px)", data-srcset="images/background.jpg, images/background.jpg", type="image/webp", srcset="images/background.jpg, images/background.jpg")
              source(data-srcset="images/background.jpg", type="image/webp", srcset="images/background.jpg")
              source(data-srcset="images/background.jpg", type="image/jpg", srcset="images/background.jpg")
              img.wh100.lazyload.object-fit-cover(width="380", height="185", data-src="images/background.jpg", alt="Oil & Gas", title="Oil & Gas", src="images/background.jpg")
          .flex-container.align-middle.px1.pt1
            //- img.mr-half.lazyloaded(style="height:24px", data-sizes="24px", data-src="images/icon-gas.svg", width="24", height="24", alt="Oil & Gas", title="Oil & Gas", sizes="24px", src="images/icon-gas.svg")
            p.small.text-gray-dark.m0 TGS CASE STUDY
          .card-section
            h5 TGS makes a seismic transformation to faster, better insights
            p
              | TGS, a leading provider of sub-surface oil and gas data, uses Cognizant&apos;s Big Decisions platform to provide its energy clients with crucial drilling insights in hours instead of days or weeks.
          .card-divider
            a.primary-medium.arrow(data-open="TGSVideo", title="WATCH NOW", aria-controls="TGSVideo", aria-haspopup="true", tabindex="0")  WATCH NOW

