  mixin grid-carousel(...elements)
    each preItems in elements
      - if(preItems.length > 3){
        //carousel starts here if more than 3 column
        //Accessiblity tab focus start
        a.tab-focus.show-on-focus(href="#" onkeydown="swiperKeypressDetect(event,swiperGrid,'top')") Grid carousel starts here
        .swiper-button-next.grid-next.xlarge-mrn2.xlarge-pl1.z2
        .swiper-button-prev.grid-prev.xlarge-mln2.xlarge-pr1.z2
        .swiper.swiper-grid.navigation-enabled.bullet-pagination-enabled.pt-half.mt1.rect-pagination(data-equalizer='featurepara' data-equalize-on-stack="true")
          .swiper-wrapper(data-equalizer='featuretitle' data-equalize-on-stack="true")
            //carousel ends here
            each item in preItems
              - item.type ="carousel"
                .swiper-slide
                  +innerContent(item)
          //carousel starts here
          .pagination.mt2.text-center.rect
        a.tab-focus.show-on-focus(href="#" onkeydown="swiperKeypressDetect(event,swiperGrid,'bottom')") Grid carousel ends here
        //Accessiblity tab focus end
      //carousel ends here

      - }
      - else{
          //Non carousel starts here less than 3 column
          div(data-equalizer='featuretitle')
            .grid-x.grid-margin-x.grid-margin-y.large-up-3.medium-up-2.small-up-1.align-center.mt1(data-equalizer='featurepara')
              //Non carousel ends here
              each item in preItems
                - item.type ="carousel"
                  .cell.relative
                    +innerContent(item)
      - }


