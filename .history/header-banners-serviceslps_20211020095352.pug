            source(src="./images/header-banners/video-background/practice-area-landing-pages/cdo-video-header-072618.ogg" type="video/ogg")
        .grid-x.grid-padding-x.align-middle.align-right(style="height: 500px; min-height: 500px")
            .cell.small-12.medium-6.large-4
                img.mb1(src="../images/COG-Logo-Digital-Operations.svg" style="height: 50px")
                h6.label.bg-orange-dark Unlock the Digital Possibilities
                h5 #[span.text-orange-dark HARNESS DIGITAL POWER] TO PROPEL EXPERIENCES AND OUTCOMES
