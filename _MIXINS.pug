mixin card-recent-article(...cardRecentArticle)
  each item in cardRecentArticle
    .cell.flex-container
      .card.bd0
        .block
          .label.text-bold.m0
              i.mr-half.ml0(class=item.icon)
              = item.eyebrow
        .card-section.px0
          h5
            a(href=item.link)= item.title
          p= item.text
        .card-divider.p0.bd-t-1.align-right
              h5.anim-icon.p1
                a.text-normal(href=item.link)
                  i.arrow-right.text-bold
                  .anim-text= item.animText


mixin latestThinkingTile(...latestThinkingTile)
  each item in latestThinkingTile
    .cell
      .card
        .mbn3.mt1.z1
          .label
            i.mr-half(class=item.icon)
            = item.eyebrow
        .lt-header-image.gradient-overlay-white
          img.object-fit-cover.object-position-top-left(src=item.image style="height: 100px;")
        .card-section.py0
          h6.m0= item.title
        .card-section
          p= item.text
          unless item.link== false
            a.arrow.m0(href=item.link)= item.linkText
        .card-divider.bg-transparent.pt0
          .grid-x.align-middle.w100
            unless item.socialMedia== false
              .small-6.large-7.cell
                h6.m0
                  a.mr1(href="#")
                    i.email.text-bold.text-gray-medium
                  a.mr1(href="#")
                    i.logo-twitter-bird.text-bold.text-gray-medium
                  a.mr1(href="#")
                    i.logo-facebook.text-bold.text-gray-medium
                  a(href="#")
                    i.logo-linkedin.text-bold.text-gray-medium
            .cell.auto.text-right
              unless item.download== false
                h5.anim-icon
                  a.text-normal(href="#")
                    i.download.text-bold
                    .anim-text Download
              unless item.view== false
                h5.anim-icon
                  a.text-normal(href="#")
                    i.arrow-right.text-bold
                    .anim-text View

mixin card-spotlight(...cardSpotlight)
  each item in cardSpotlight
    .card.h100
      .card-image.relative.py3
          img.absolute.pos-top.object-fit-cover(src=item.image)
      .card-section.pb0
        if item.label == true
          .label.text-bold.mb-half= item.eyebrow
        else
          p.small.text-bold.mb-half= item.eyebrow
        h5= item.title
        p= item.text
      .card-divider
        a.arrow(href=item.link)= item.linkText