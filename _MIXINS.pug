mixin industries-card-growingBorder(...growingBorder)
  each item in growingBorder
    .py3.bg-primary
      .grid-container
        .grid-x.grid-padding-x.align-center
          .cell.small-11.large-12.hover-border-grow.mb2
            .grid-x.grid-padding-x
              .cell.medium-6.px0
                .relative.wh100
                  img.object-fit-cover.absolute(src=item.image)
              .cell.medium-6.align-self-middle.p3
                h5=item.title
                p=item.text
                a.button.arrow.m0(href=item.link)= item.button

mixin industries-card-animatedHover(...animatedHover)
  each item in animatedHover
    .cell.flex-container.align-stretch
      .flex-container.align-middle.w100.hover-hide-show(style="background: url("+item.image+") no-repeat center center / cover;")
        .grid-x.align-self-bottom.collapse.w100.hide-on-hover.absolute.bg-primary-60
          .cell.p1.align-middle(data-equalizer-watch="headline")
            p.text-bold.small.bd-b-white-1.pb1= item.eyebrow
            h5.m0= item.headline

        .show-on-hover.h100.flex-container.align-middle.p2.bg-primary-60
          .grid-x
            .cell
              p.text-bold.small.bd-b-white-1.pb1= item.eyebrow
              h5= item.headline
            .cell
              p.truncate-100= item.body
              a.arrow.m0(href=item.link)= item.button

mixin industries-latestThinking(...latestThinking)
  each item in latestThinking
    .cell.cell-block.flex-container
      .card
        .card-image
          img.object-fit-cover(src=item.image)
        .card-section
          p.text-bold.small= item.eyebrow
          h5= item.title
          p= item.body

        .card-divider
          a.arrow(href=item.link)= item.button

mixin caseStudy(...caseStudy)
  each item in caseStudy
    .cell.auto.flex-container
      .anim-icon.flex-container.flex-child-auto
        .card.gradient-overlay-primary-full.bd-primary-4.box-shadow-hover.text-white(style="background: url("+item.image+") no-repeat; background-size: cover;")
          .mbn3.mt1.z1
            .label
              img.mr-half(src=item.icon width="20" style="filter: invert(1);")
              != item.eyebrow
          .card-section.pt2.medium-pt5.mt5.z1
            h5.m0= item.title
          a.link-coverAll.card-divider.bg-transparent.pt0.text-right.z1(href=item.link)
              .grid-x.w100
                .cell
                  hr.mt0.mb1.opacity-50
                .cell.flex-container.align-right
                  h5.anim-icon
                    i.arrow-solid-right.text-bold
                    .anim-text View

