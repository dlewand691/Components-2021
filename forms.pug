extend __LAYOUT-TEMPLATE.pug
block vars
  - var pageTitle = "Forms"

block content

  h1!= pageTitle

  .grid-container
    .grid-x.grid-padding-x
      .small-12.cell
        form(data-abide novalidate)
          .alert.callout.small(data-abide-error, style="display: none;")
            p
              i.report-problem-triangle
              |  There are some errors in your form.
          .grid-x.grid-padding-x.align-center.expanded
            .small-12.cell
              label
                | Number Required
                input(type="text" placeholder="1234", aria-describedby="exampleHelpText" required pattern="number" tabindex=""  autocomplete="on" name="name")
                span.form-error
                  | Yo, you had better fill this out, it's required.
              p#exampleHelpText.help-text Here's how you use this input field!
            .small-12.cell
              label
                | Nothing Required!
                input(type="text" placeholder="Use me, or don't", aria-describedby="exampleHelpTex", data-abide-ignore="" tabindex=""  autocomplete="on" name="name")
              p#exampleHelpTex.help-text This input is ignored by Abide using &grave;data-abide-ignore&grave;
            .small-12.cell
              label
                | Password Required
                input#password(type="password" placeholder="yeti4preZ", aria-describedby="exampleHelpText" required)
                span.form-error
                  | I'm required!
              p#exampleHelpText.help-text Enter a password please.
            .small-12.cell
              label
                | Re-enter Password
                input(type="password" placeholder="yeti4preZ", aria-describedby="exampleHelpText2" required pattern="alpha_numeric" tabindex="" data-equalto="password")
                span.form-error
                  | Hey passwords are supposed to match!
              p#exampleHelpText2.help-text
                | This field is using the &grave;data-equalto=&quot;password&quot;&grave; attribute, causing it to match the password field above.
          .grid-x.grid-padding-x.align-center.expanded
            .medium-4.cell
              label
                | URL Pattern
                input(type="text" placeholder="http://foundation.zurb.com" pattern="url" tabindex="" autocomplete="on" name="name")
            .medium-3.cell
              label
                | Default Dropdown
                select#select(data-placeholder="Select" required)
                  option(disabled) Select
                  option(value="volvo") Volvo
                  option(value="saab") Saab
                  option(value="mercedes") Mercedes
                  option(value="audi") Audi
            .medium-3.cell
              label(disabled)
                | Disabled Dropdown
                select#select.select2(data-placeholder="Select" required)
                  option(value="volvo") Volvo
                  option(value="saab") Saab
                  option(value="mercedes") Mercedes
                  option(value="audi") Audi
          .grid-x.grid-padding-x.align-center.expanded.medium-up-3
            .cell.cell-block
              h6.m0 Radios that are required
              label(for="validationRadio01")
                input#validationRadio01.radio(type="radio" name="pokemon" value="Red")
                | Radio default
              label(for="validationRadio02")
                input#validationRadio02.radio(type="radio" name="pokemon" value="Blue" required)
                | Radio selected
              label(for="validationRadio03" disabled)
                input#validationRadio03.radio(type="radio" name="pokemon" value="Yellow")
                | Radio disabled
            .cell.cell-block
              h6.m0 Radios that are not required
              label(for="validationRadio04")
                input#validationRadio04.radio(type="radio" name="pockets" value="Red")
                | Red
              label(for="validationRadio05")
                input#validationRadio05.radio(type="radio" name="pockets" value="Blue")
                | Blue
              label(for="validationRadio06")
                input#validationRadio06.radio(type="radio" name="pockets" value="Yellow")
                | Yellow
            .cell.cell-block
              h6.m0 Checkboxes that are not required
              label(for="validationRadio07")
                input#validationRadio07.checkbox(type="checkbox")
                | Checkbox default
              label(for="validationRadio08")
                input#validationRadio08.checkbox(type="checkbox")
                | Checkbox selected
              label(for="validationRadio09" disabled)
                input#validationRadio09.checkbox(type="checkbox")
                | Checkbox disabled
            .cell.cell-block
              h6 Switch, default
              .switch.tiny
                input#exampleSwitch01.switch-input(type="checkbox" name="exampleSwitch01" tabindex="")
                label.switch-paddle(for="exampleSwitch01")
                  span.show-for-sr Switch
              .switch.small
                input#exampleSwitch02.switch-input(type="checkbox" name="exampleSwitch02" tabindex="")
                label.switch-paddle(for="exampleSwitch02")
                  span.show-for-sr Switch
              .switch
                input#exampleSwitch03.switch-input(type="checkbox" name="exampleSwitch03" tabindex="")
                label.switch-paddle(for="exampleSwitch03")
                  span.show-for-sr Switch
              .switch.large
                input#exampleSwitch04.switch-input(type="checkbox" name="exampleSwitch04" tabindex="")
                label.switch-paddle(for="exampleSwitch04")
                  span.show-for-sr Switch
            .cell.cell-block
              h6 Switch round
              .flex-container.align-middle
                .switch.rounded.tiny.mr-half
                  input#exampleSwitch05.switch-input(type="checkbox" name="exampleSwitch05" tabindex="")
                  label.switch-paddle(for="exampleSwitch05")
                    span.show-for-sr Switch
                p Switch
              .flex-container.align-middle
                .switch.rounded.small.mr-half
                  input#exampleSwitch06.switch-input(type="checkbox" name="exampleSwitch06" tabindex="")
                  label.switch-paddle(for="exampleSwitch06")
                    span.show-for-sr Switch
                p Switch
              .flex-container.align-middle
                .switch.rounded.mr-half
                  input#exampleSwitch07.switch-input(type="checkbox" name="exampleSwitch07" tabindex="")
                  label.switch-paddle(for="exampleSwitch07")
                    span.show-for-sr Switch
                p Switch
              .flex-container.align-middle
                .switch.rounded.large.mr-half
                  input#exampleSwitch08.switch-input(type="checkbox" name="exampleSwitch08" tabindex="")
                  label.switch-paddle(for="exampleSwitch08")
                    span.show-for-sr Switch
                p Switch

          .grid-x.grid-padding-x.align-center-middle.pt4
            .cell.shrink
              button.m0.button.hollow(type="reset" value="Reset") Reset
            .cell.shrink
              button.m0.button.px4(type="submit" value="Submit") Submit


  //- =============================================================================================
  //-
  //-  ██████  ██████  ███    ██ ████████  █████   ██████ ████████     ███████  ██████  ██████  ███    ███
  //- ██      ██    ██ ████   ██    ██    ██   ██ ██         ██        ██      ██    ██ ██   ██ ████  ████
