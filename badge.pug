extend __LAYOUT-TEMPLATE.pug
block vars
    - var pageTitle = "Badge"

block content
    h1!= pageTitle
    <div class="button-group">
        <a class="button" href="#"></a>
    </div>
    a.button.arrow(href="#") CHANGE_ME
    a.small.button.arrow(href="#") CHANGE_ME

    .grid-container
        .grid-x.grid-padding-x
            .cell
                span.primary.badge 1
                span.secondary.badge 2
                span.success.badge 3
                span.alert.badge A
                span.warning.badge B